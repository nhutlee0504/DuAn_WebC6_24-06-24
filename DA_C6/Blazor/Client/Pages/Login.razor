@page "/login"
@using Blazor.Shared.Model
@inject IJSRuntime JSRuntime
@inject HttpClient httpclient
<div class="container">
    <div class="row justify-content-center mt-5 mb-5">
        <div class="col-md-6">
            <div class="form-container p-4 rounded bg-white shadow-sm">
                <h2 class="text-center mb-4">Đăng nhập</h2>
                <form asp-controller="" asp-action="" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label for="UserName" class="form-label">Tên tài khoản</label>
                        <input asp-for="UserName" type="text" class="form-control rounded-pill" id="UserName" placeholder="Nhập tên tài khoản">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control rounded-start" id="password" placeholder="Nhập mật khẩu">
                            <button type="button" class="btn btn-outline-secondary rounded-end" id="togglePassword" onclick="togglePasswordVisibility()">
                                👁️
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button @onclick="AttemptLogin" class="btn btn-dark btn-block w-100 rounded-pill">Tiếp tục</button>                    
                    <div class="text-center mt-4 position-relative">
                        <hr class="mt-3">
                        <div class="position-absolute top-50 start-50 translate-middle" style="background-color: white;padding: 0 10px;">Hoặc</div>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="ForgotPassword" class="text-primary" href="forgotPass">Quên mật khẩu?</a>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="SigninGoogle" asp-controller="Home" class="btn btn-light btn-block rounded-pill border w-100">Đăng nhập bằng Google</a>
                    </div>
                    <div class="text-center mt-3">
                        Bạn mới biết đến NEXTON? <a class="text-primary" href="/Pages/Register">Đăng ký tài khoản</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById('password');
        var toggleBtn = document.getElementById('togglePassword');

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleBtn.innerHTML = '🙈';
        } else {
            passwordField.type = 'password';
            toggleBtn.innerHTML = '👁️';
        }
    }
</script>
@code {
    private Account model = new Account();

    private async Task AttemptLogin()
    {
        try
        {
            // Gửi yêu cầu đăng nhập đến API backend
            var response = await httpclient.PostAsJsonAsync("api/Account/Authenticate", model);

            if (response.IsSuccessStatusCode)
            {
                // Nếu đăng nhập thành công, chuyển hướng đến trang index
                // NavigationManager.NavigateTo("/");
            }
            else
            {
                // Xử lý khi đăng nhập thất bại
                await JSRuntime.InvokeVoidAsync("alert", "Đăng nhập không thành công. Vui lòng thử lại.");
            }
        }
        catch (Exception ex)
        {
            // Xử lý các ngoại lệ
            await JSRuntime.InvokeVoidAsync("alert", "Đã xảy ra lỗi khi đăng nhập: " + ex.Message);
        }
    }


}