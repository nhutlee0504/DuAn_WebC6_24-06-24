@page "/login"
<div class="container">
    <div class="row justify-content-center mt-5 mb-5">
        <div class="col-md-6">
            <div class="form-container p-4 rounded bg-white shadow-sm">
                <h2 class="text-center mb-4">Đăng nhập</h2>
                <form asp-controller="Home" asp-action="Loginktr" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label for="UserName" class="form-label">Tên tài khoản</label>
                        <input asp-for="UserName" type="text" class="form-control rounded-pill" id="UserName" placeholder="Nhập tên tài khoản">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control rounded-start" id="password" placeholder="Nhập mật khẩu">
                            <button type="button" class="btn btn-outline-secondary rounded-end" id="togglePassword">
                                👁️
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block w-100 rounded-pill">Tiếp tục</button>
                    <div class="text-center mt-4 position-relative">
                        <span class="bg-white px-3 position-absolute" style="left: 50%; top: -10px; transform: translateX(-50%);">Hoặc</span>
                        <hr class="mt-3">
                    </div>
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="ForgotPassword" class="text-primary" href="forgotPass">Quên mật khẩu?</a>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="SigninGoogle" asp-controller="Home" class="btn btn-light btn-block rounded-pill border w-100">Đăng nhập bằng Google</a>
                    </div>
                    <div class="text-center mt-3">
                        Bạn mới biết đến NEXTON? <a class="text-primary" href="/Pages/Register">Đăng ký tài khoản</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');

        togglePassword.addEventListener('click', function () {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            this.textContent = type === 'password' ? '👁️' : '🙈';
        });
    });
</script>
