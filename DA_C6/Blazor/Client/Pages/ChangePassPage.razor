@page "/changePass"

<div class="container">
    <h2 class="d-flex justify-content-center">Đổi mật khẩu</h2>
    <div class="row">
        <div class="col-md-4 offset-4">
            <form asp-action="PassChange" method="post">
                <input type="hidden" asp-for="UserName" name="userName" />
                <div class="form-group">
                    <label class="control-label">Mật khẩu cũ</label>
                    <input type="password" class="form-control" name="oldPass" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label class="control-label">Mật khẩu mới</label>
                    <input type="password" class="form-control" name="newPass" />
                    @*  @if (TempData["newPassFail"] != null)
                    {
                    <span class="text-danger">@TempData["newPassFail"]</span>
                    } *@
                </div>
                <div class="form-group mt-3">
                    <label class="control-label">Nhập lại mật khẩu mới</label>
                    <input type="password" class="form-control" name="newPass1" />
                    @*  @if (TempData["newPass1Fail"] != null)
                    {
                    <span class="text-danger">@TempData["newPass1Fail"]</span>
                    } *@
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-dark btn-block" style="border-radius: 20px">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>