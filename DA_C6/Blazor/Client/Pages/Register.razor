@page "/Pages/Register"

<ol class="breadcrumb bg-transparent">
    <li class="breadcrumb-item"><a href="/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Đăng ký tài khoản</li>
</ol>

<div class="container">
    <div class="row justify-content-center" style="margin-top:50px">
        <div class="col-md-4">
            <div class="text-center mb-5">
                <h3>Đăng ký tài khoản</h3>
            </div>
            <form asp-action="Register">
                @*                 <div class="text-danger" asp-validation-summary="ModelOnly"></div> *@
                <div class="mb-3">
                    <label for="username" class="form-label fw-bolder">Tên tài khoản</label>
                    <input asp-for="UserName" data-intro="Điền tên tài khoản vào đây" data-step="1" type="text" class="form-control" id="username" placeholder="Tên tài khoản" required>
                    <small id="usernameHelp" class="form-text text-muted">Ví dụ: JohnDoe123</small>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label fw-bolder">Mật khẩu</label>
                    <input asp-for="Password" data-intro="Điền mật khẩu" data-step="2" type="password" class="form-control" id="password" placeholder="Mật khẩu" required>
                    <small id="passwordHelp" class="form-text text-muted">Mật khẩu ít nhất 8 ký tự</small>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label fw-bolder">Nhập lại mật khẩu</label>
                    <input asp-action="Register" name="passConfirm" data-intro="Điền đúng mật khẩu" data-step="3" type="password" class="form-control" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                    <small id="confirmPasswordHelp" class="form-text text-muted">Xác nhận lại mật khẩu để đảm bảo chính xác</small>

                </div>
                <input type="submit" value="Bước tiếp theo" class="btn btn-dark w-100 rounded-pill" />

            </form>

            <div class="row justify-content-center mt-3">
                <div class="col-auto">
                    <a>Hoặc</a>
                </div>
            </div>
            <div class="row justify-content-center mt-3 mb-3">
                <div class="col-auto">
                    <a>Bạn đã có tài khoản?</a><a href="/login">&ensp;Đăng nhập</a>
                </div>
            </div>

        </div>
    </div>
</div>

