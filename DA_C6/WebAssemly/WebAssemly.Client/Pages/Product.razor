        <div class="col-sm-3">
            <h5>Loại</h5>
            <form method="post" asp-action="FilterByCategories" id="filterByCate">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedCategories">
                        <label class="form-check-label" for="">Áo</label>
                    </div>
                <button type="submit" class="btn btn-dark mt-3">Lọc</button>
            </form>

            <hr class="mt-3 mb-3">

            <h5>Phạm vi giá</h5>
            <form action="/Product/FilterByPrice" method="post">
                <div class="input-group mb-3">
                    <input type="number" placeholder="Thấp" class="form-control" name="priceLow" id="priceLow" >
                    <input type="number" placeholder="Cao" class="form-control" name="priceHigh" id="priceHigh" >
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-dark">Lọc</button>
                    </div>
                </div>
            </form>

